# A sample Gemfile
source "https://rubygems.org"

gem 'rake'
gem 'activesupport'

gem 'sinatra'
gem 'sinatra-contrib'
gem 'sinatra-activerecord'

gem 'puma'
gem 'tux'
gem 'bcrypt'

group :development, :test do
  gem 'pry-byebug'
  gem 'shotgun'
  gem 'sqlite3'
end

group :production
  gem 'pry-byebug'
  gem 'pg'
  gem 'sqlite3'
end
