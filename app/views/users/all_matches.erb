<a href="/matches/user/<%= @friend.id %>"><h2>Back to <%= @friend.name %>'s profile</h2></a>

  <div class="col-md-12">
    <div class="panel panel-primary">
    <% if @me_and_friend_all_matches.count > 0 %>
      <div class="panel-heading">
        <h2>All matches against <%= @friend.name %></h2>
      </div>
      <div class="panel-body">
        <!-- Result Table -->
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Date</th>
              <th>Result</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @me_and_friend_all_matches.each_with_index do |match, index|%>
            <tr>
              <td><%= index+1 %></td>
              <td><%= match.game.title %></td>
              <td><%= match.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%A, %F %T")%></td>
              <td><%= match.winner == current_user ? "WIN" : "LOSE"%></td>
              <td><a href="/match/edit/<%= match.id %>">Edit Record</a></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="panel-heading">
        <h2>You do not have any record against <%= @friend.name %></h2>
      </div>
    <% end %>
    </div>
  </div>