 <div>

  <h1>Record Your Match</h1>
  
  <form class="new-match center-block col-md-8">
    <fieldset class="form-group">
      <label for="game">Game: </label>
      <select class="form-control input-lg">
        <option>Super Smash Bros</option>
        <option>FIFA</option>
        <option>NHL</option>
      </select>
    </fieldset>

    <fieldset class="form-group">
      <label>Opponent's Username: </label>
      <input type="text" class="form-control input-lg" name="player2" value="">
    </fieldset>
    <div class="form-group">
      <label>Did you win?</label>
      <div class="switch-field col-xs-12">
        <input type="radio" id="switch_left" name="switch_2" value="yes" checked/>
        <label for="switch_left">Yes</label>
        <input type="radio" id="switch_right" name="switch_2" value="no" />
        <label for="switch_right">No</label>
      </div>
    </div>
    <input type="submit" class="btn btn-lg btn-primary clear-fix" value="Submit">
  </form>
</div>



